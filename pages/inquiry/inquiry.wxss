/* pages/inquiry/inquiry.wxss */
.inquiry_title {
  display: flex;
  margin: 30rpx;
  margin-left: 50rpx;
  font-size: 34rpx;
}

.menu,
.departmen {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.top_image{
  width: 710rpx;
  height: 124rpx;
  border-radius: 20rpx;
  margin: 20rpx 0;
}
.department_title {
  margin: 20rpx 0;
  font-size: 40rpx;
}
.midden{
  margin-top: 15rpx;
  width: 710rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.midden_image{
  width: 340rpx;
  height: 152rpx;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}
.department_row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.department_item {
  margin: 10rpx;
  width: 220rpx;
  height: 220rpx;
  background-color: #fafafa;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 30rpx;
}

.department_image {
  margin-top: 25rpx;
  margin-bottom: 15rpx;
  width: 90rpx;
  height: 90rpx;
}

/* 搜索框样式 */
.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
  height: 80rpx;
  background-color: #ffffff;
  border: 1rpx solid #cdcdcd;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
}

/* 搜索框提示文字样式 */
.search input {
  width: 80%;
  font-size: 27rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-right: 30rpx;
  margin-left: 20rpx;
}

/* 搜索框小图标 */
.search image {
  width: 40rpx;
  height: 40rpx;
  padding-left: 20rpx;
}