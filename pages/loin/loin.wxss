/* pages/login/login.wxss */
page {
  height: 100%;
}
.bgimg {
  position: absolute;
  width: 100%;
  min-height:100%;
  z-index: -1;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo image {
  margin-top: 30%;
  width: 400rpx;
}

.logo text {
  margin: 26rpx 0;
  font-size:70rpx;
  font-family: logotype;
}

.form {
  padding: 40rpx;
}

.form .row-group {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ddd;
  position: relative;
}

.form .row-group text {
  font-size: 34rpx;
  padding: 10rpx 0;
}

.form .row-group input {
  padding: 10rpx 0;
}

.form .row-group .txt {
  color: #ccc;
}

.form .row-group .code {
  position: absolute;
  right: 0;
  bottom: 26rpx;
  z-index: 2;

  width: 206rpx;
  height: 60rpx;
  border: 2rpx solid #000;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.form .submit {
  margin-top: 80rpx;
  color: #000;
  border: 2rpx solid #000;
  background-color: transparent;
  font-size: 32rpx;
  font-weight: bold;
}
